@using GridMvc.Html
@model IEnumerable<webgallery.Models.GetAllSubmissionsInBrief_Result>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div style="">

@Html.Grid(Model).Columns(columns =>
{

columns.Add(model => model.SubmissionID).Titled("SubmissionID").SetWidth(30);
columns.Add(model => model.Nickname).Titled("AppID").SetWidth(50);
columns.Add(model => model.Version).Titled("Version").SetWidth(50);
columns.Add(model => model.SubmittingEntity).Titled("Publisher").SetWidth(50);
columns.Add(model => model.SubmissionState).Titled("Status").SetWidth(35);
columns.Add()
.Titled("Actions")
.Encoded(false)
.Sanitized(false)
.SetWidth(30)
.RenderValueAs(d =>
@<b>
    @Html.ActionLink("Edit", "Edit", new { id = d.SubmissionID })<br/>@Html.ActionLink("Owners", "PublisherDetails", new { id= d.SubmissionID})<br/>@Html.ActionLink("Delete", "Delete", new { id = d.SubmissionID })<br/> @Html.ActionLink("Change Status", "ChangeAppstatus", new { id = d.SubmissionID }) 
</b>);

}).WithPaging(20).Sortable().Filterable()

   

    </div>
