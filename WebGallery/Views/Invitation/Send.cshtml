@model WebGallery.ViewModels.InvitationSendViewModel

@{
    ViewBag.Title = "New Ownership Invitation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h2>New Ownership Invitation</h2>
    <p>Fill the form below to invite the one to be the owner of this app: <a href="/app/detail/@Model.Submission.SubmissionID"><strong>@Model.Submission.Nickname</strong> - <strong>@Model.Submission.Version</strong></a>.</p>
    <div class="form-panel">
        @using (Html.BeginForm("Send", "Invitation", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="Submission.SubmissionID" value="@Model.Submission.SubmissionID" />
            <div>
                @Html.LabelFor(m => m.FirstName):
            </div>
            <div>
                @Html.EditorFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div>
                @Html.LabelFor(m => m.LastName)
            </div>
            <div>
                @Html.EditorFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <div>
                @Html.LabelFor(m => m.EmailAddress)
            </div>
            <div>
                @Html.EditorFor(m => m.EmailAddress)
                @Html.ValidationMessageFor(m => m.EmailAddress)
            </div>
            <div>
                @Html.LabelFor(m => m.ConfirmEmailAddress)
            </div>
            <div>
                @Html.EditorFor(m => m.ConfirmEmailAddress)
                @Html.ValidationMessageFor(m => m.ConfirmEmailAddress)
            </div>
            <div>
                <input type="submit" value="Send invitation" />
            </div>
        }
    </div>
    <div class="links-panel">
        <a href="/app/owners/@Model.Submission.SubmissionID">Back to App Owners</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section Styles {
    @Styles.Render("~/css/invitation-send")
}