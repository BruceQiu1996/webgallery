@model WebGallery.ViewModels.AppInstallViewModel

@{
    ViewBag.Title = "Install";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content clearfix">
    <div class="panel-left">
        <h4>@Resources.AppInstall.InstallsPoweredBy</h4>
        <div class="clearfix">
            <a href="http://webpihandler.azurewebsites.net/webpi.ashx?command=getinstaller&appid=@Model.Submission.Nickname"
               onclick="$(this).parent().parent().hide(); $(this).parent().parent().next().hide(); $(this).parent().parent().next().next().show()"></a>
            <p>@Resources.AppInstall.ByDownloadingAndUsing <a href="http://go.microsoft.com/fwlink/?LinkID=195251" target="_blank"> @Resources.AppInstall.LicenseTerms </a> @Resources.AppInstall.ForTheWebPI</p>
        </div>
        <p>@Resources.AppInstall.PleaseLeaveThisWindowOpen</p>
        <hr />
        <h4>@Resources.AppInstall.SystemRequirments</h4>
        <ul>
            <li>@Resources.AppInstall.SupportedOperatingSystems</li>
            <li>@Resources.AppInstall.YouMustHaveALiveInternetConnection</li>
            <li>@Resources.AppInstall.YouMustHaveALiveAdministratorPrivileges</li>
        </ul>
    </div>
    <div class="panel-right">
        <h3>@Resources.AppInstall.YouAreAboutToInstall</h3>
        <div>
            <img src="@Model.Submission.LogoUrl" alt="@Model.Submission.Nickname" />
        </div>
        <h3>@Html.RouteLink(Model.Metadata.Name, SiteRouteNames.App_View, new { appId = Model.Submission.Nickname })</h3>
        <p>@Model.Metadata.Description</p>
        <a href="@Url.RouteUrl(SiteRouteNames.App_View,new {appId = Model.Submission.Nickname })" target="_blank">@Resources.AppInstall.MoreInformation</a>
    </div>
    <div class="panel-installing">
        <h3>@Resources.AppInstall.InstallerLaunching</h3>
        <p>@Resources.AppInstall.InstallerReturnPreamble<a href="@Url.RouteUrl(SiteRouteNames.App_View, new { appId = Model.Submission.Nickname })">@Resources.AppInstall.InstallerReturnTrigger</a>.</p>
        <div>
            If you meet issues on this app, please click @Html.RouteLink("here", SiteRouteNames.App_Issues_Report, new { appId = Model.Submission.Nickname }) to contact us and the owner.
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/css/app-install")
}