@model WebGallery.ViewModels.AppMineViewModel

@{
    ViewBag.Title = "Web App Gallery Submission Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h2>Web App Gallery Submission Portal</h2>
    <div>
        <p>Welcome! From this page you can:</p>
        <ul>
            <li>@Html.ActionLink("Submit a new application", "New").</li>
            <li>Edit your previous submissions.</li>
            <li>Verify the validity of your application data.</li>
            <li>Designate co-owners for your submissions.</li>
            <li>Edit your @Html.ActionLink("contact information", "Profile", "Account").</li>
        </ul>
    </div>
    <div class="submissions-table-container">
        <table cellpadding="0" cellspacing="0" class="submissions-table sortable">
            <thead>
                <tr>
                    <th><a>App ID</a></th>
                    <th data-defaultsort='disabled'>Ver</th>
                    <th data-firstsort="desc"><a>ID</a></th>
                    <th data-defaultsort='disabled'>Status</th>
                    <th data-defaultsort='disabled'></th>
                </tr>
            </thead>
            <tbody>
                @for (var index = 0; index < Model.MySubmissions.Count; index++)
                {
                    var submission = Model.MySubmissions[index];

                    <tr>
                        <td class="sortOnThisCol">@submission.Nickname</td>
                        <td>@submission.Version</td>
                        <td class="sortOnThisCol">@submission.SubmissionID</td>
                        <td>@submission.Status</td>
                        <td>
                            <a>actions</a>
                            <div class="actions-panel">
                                <ul>
                                    <li>@Html.ActionLink("edit", "Edit", new { id = submission.SubmissionID })</li>
                                    <li>@Html.ActionLink("verify", "Verify", new { id = submission.SubmissionID })</li>
                                    <li>@Html.ActionLink("owners", "Owners", new { id = submission.SubmissionID })</li>
                                    <li>@Html.ActionLink("clone", "Clone", new { id = submission.SubmissionID })</li>
                                    <li>@Html.ActionLink("preview in gallery", "Detail", new { id = submission.SubmissionID })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/js/app-mine")
}

@section Styles {
    @Styles.Render("~/css/app-mine")
}