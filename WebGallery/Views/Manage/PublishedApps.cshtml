@using PagedList.Mvc;

@{
    ViewBag.Title = "PublishedApps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h2>Published Applications</h2>
    <div class="search-form">
        @using (Html.BeginForm())
        {
            <p>List only apps whose App ID contains:@Html.TextBox("keyword")</p>
        }
    </div>
    <div class="apps-table-container">
        <table cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>AppId</th>
                    <th>App Title</th>
                    <th>Version</th>
                    <th>Author</th>
                    <th>Published Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0; i < 20; i++)
                {
                    <tr>
                        <td>CloudSwyft </td>
                        <td><a>Cloud Swyft</a></td>
                        <td>1.0.0.0</td>
                        <td><a>Dann Community</a></td>
                        <td>2016/8/3</td>
                        <td><input type="button" value="Delete"></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    @Styles.Render("~/css/published-apps")
}